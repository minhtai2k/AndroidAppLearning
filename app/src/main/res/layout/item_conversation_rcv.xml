<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:strokeColor="@color/grey"
    app:strokeWidth="1dp"
    app:cardCornerRadius="10dp"
    android:layout_height="300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imv_speaker_question_conversation_admin"
            android:layout_width="40dp"
            android:layout_height="150dp"
            android:layout_gravity="center|left"
            android:src="@drawable/ic_baseline_volume_up_24" />

        <ImageView
            android:id="@+id/imv_speaker_answer_conversation_admin"
            android:layout_width="40dp"
            android:layout_height="150dp"
            android:layout_below="@+id/imv_speaker_question_conversation_admin"
            android:layout_gravity="center|left"
            android:src="@drawable/ic_baseline_volume_up_24" />

        <TextView
            android:id="@+id/item_question_conversation_activity"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_toRightOf="@+id/imv_speaker_question_conversation_admin"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:text="Question"
            android:textColor="@color/green"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_questionVS_conversation_activity"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/item_question_conversation_activity"
            android:layout_toRightOf="@+id/imv_speaker_question_conversation_admin"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:text="Câu hỏi"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_answer_conversation_activity"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/item_questionVS_conversation_activity"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/imv_speaker_answer_conversation_admin"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Answer"
            android:textColor="@color/blue"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/item_answerVS_conversation_activity"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/item_answer_conversation_activity"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/imv_speaker_answer_conversation_admin"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Câu trả lời"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </RelativeLayout>




</com.google.android.material.card.MaterialCardView>