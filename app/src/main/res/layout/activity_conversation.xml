<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConversationActivity">

    <RelativeLayout
        android:id="@+id/relativeLayoutConversation1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imv_back_convarsation_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title_conversation_activity"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:drawableLeft="@drawable/ic_baseline_quiz_24"
        android:fontFamily="@font/nunito_extrabold"
        android:gravity="center"
        android:text="Chọn hình thức bạn muốn học"
        android:textColor="@color/primary_text"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutConversation1" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_htcn_conversation_activity"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="@color/grey"

        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_conversation_activity"
        app:strokeColor="#686D6E"
        app:strokeWidth="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Hội thoại chuyên ngành"
            android:textColor="@color/cardview_home_tvcn" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_htpv_conversasion_activity"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/grey"

        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_htcn_conversation_activity"
        app:strokeColor="#686D6E"
        app:strokeWidth="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Hội thoại phỏng vấn"
            android:textColor="@color/cardview_home_tvcn" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>