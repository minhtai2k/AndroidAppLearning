<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VocabularyActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imv_back_vocabulary_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title_vocabulary_activity"
        android:layout_width="match_parent"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_margin="15dp"
        android:fontFamily="@font/nunito_extrabold"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_baseline_quiz_24"
        android:text="Chọn chuyên ngành bạn muốn học"
        android:textColor="@color/primary_text"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout1" />

    <com.google.android.material.card.MaterialCardView
        android:backgroundTint="#F1F4F4"
        app:cardCornerRadius="15dp"
        app:strokeWidth="1dp"
        app:strokeColor="#686D6E"
        android:id="@+id/cv_nt4_vocabulary_activity"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_mmt_vocabulary_activity">

        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/cardview_home_tvcn"
            android:gravity="center"
            android:text="Thứ 4" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:backgroundTint="#F1F4F4"
        app:cardCornerRadius="15dp"
        app:strokeWidth="1dp"
        app:strokeColor="#686D6E"
        android:id="@+id/cv_cnpm_vocabulary_activity"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="160dp"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/cardview_home_tvcn"
            android:gravity="center"
            android:text="Công nghệ phần mềm" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:backgroundTint="#F1F4F4"
        app:cardCornerRadius="15dp"
        app:strokeWidth="1dp"
        app:strokeColor="#686D6E"
        android:id="@+id/cv_mmt_vocabulary_activity"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/cardview_home_tvcn"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Mạng máy tính" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:backgroundTint="#F1F4F4"
        app:cardCornerRadius="15dp"
        app:strokeWidth="1dp"
        app:strokeColor="#686D6E"
        android:id="@+id/cv_hcsdl_vocabulary_activity"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_cnpm_vocabulary_activity">

        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/cardview_home_tvcn"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Hệ quản trị CSDL" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>