<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminVocabularyActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_conversation_admin_activity"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="500dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_conversation_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/background_edt_bg_color"
        android:text="Add"
        android:textColor="@color/cardview_home_tvcn"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rcv_conversation_admin_activity"
        app:strokeColor="@color/cardview_home_tvcn"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back_conversation_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/background_edt_bg_color"
        android:text="Back"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/cardview_home_tvcn"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_conversation_admin"
        app:strokeColor="@color/cardview_home_tvcn"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>