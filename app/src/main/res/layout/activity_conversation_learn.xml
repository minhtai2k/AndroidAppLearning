<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConversationLearnActivity">

    <RelativeLayout
        android:id="@+id/relativeLayoutLearnConversation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imv_back_conversation_learn_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/tv_title_conversation_learn_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:text="Level"
            android:textColor="@color/primary_text"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayoutConversation"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutLearnConversation">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_person1_conversation_learn_activity"
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/blue"
            app:strokeWidth="2dp">

            <ImageView
                android:id="@+id/imv_employer_conversation_learn_activity"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/employer" />

            <TextView
                android:id="@+id/tv_employer_conversation_learn_activity"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Hi! I am the Director of HR Recruitment. As you know, the company is currently recruiting software engineers HR Recruitment! Now we get to come the first question" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_person2_conversation_learn_activity"
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/blue"
            app:strokeWidth="2dp">

            <TextView
                android:id="@+id/tv_interns_conversation_learn_activity"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="" />

            <ImageView
                android:id="@+id/imv_interns_conversation_learn_activity"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/interns" />
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_prev_conversation_learn_activity"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Prev"
        android:textColor="@color/blue"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutConversation"
        app:layout_constraintVertical_bias="0.148"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next_conversation_learn_activity"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/nunito_extrabold"
        android:text="Next"
        android:textColor="@color/blue"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutConversation"
        app:layout_constraintVertical_bias="0.148"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>